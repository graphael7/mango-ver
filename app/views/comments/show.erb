<div id="comment-container">
<% if object.comments.empty? != true %>
<ul>
    <% object.comments.each do |comment| %>
    <li><%= comment.description %></li>

      <%if authorized?(comment)%>
      <form method="get" action="/comments/<%=comment.id%>/edit">
        <input id= "comment_edit" type="submit" value="Edit Comment">
      </form>
      <form   method="post" action="/comments/<%=comment.id%>">
        <input type="hidden" name="_method" value="delete">
        <input id="comment_delete" type="submit" value="Delete Comment">
      </form>
      <%end%>
    <% end %>
<% end %>
</ul>

</div>
